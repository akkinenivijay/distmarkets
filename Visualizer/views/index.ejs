        <li><a href="/">Logout</a></li>
      </ul>
    </nav>
  </div>
  <br/>
  <div class="jumbotron">
    <center>
      <div id="map" style="width: 1200px; height: 750px;"></div>
      <script type="text/javascript">
          var locations = [
              ['Bondi Beach', -33.890542, 151.274856, 4, 'http://google.com'],
              ['Coogee Beach', -33.923036, 151.259052, 5, 'http://coinbase.com'],
              ['Cronulla Beach', -34.028249, 151.157507, 3, 'http://bitpay.com'],
              ['Manly Beach', -33.80010128657071, 151.28747820854187, 2, 'http://facebook.com'],
              ['Maroubra Beach', -33.950198, 151.259302, 1, 'http://google.com']
          ];

          var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 10,
              center: new google.maps.LatLng(-33.92, 151.25),
              mapTypeId: google.maps.MapTypeId.ROADMAP
          });

          var infowindow = new google.maps.InfoWindow();

          var marker, i;


          for (i = 0; i < locations.length; i++) {
              var place = locations[i];

              marker = new google.maps.Marker({
                  position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                  url: place[4],
                  map: map
              }
              );
              new google.maps.event.addListener(marker, 'click', function() {
                  window.location.href = this.url;
              });


          }
      </script>

    </center>
  </div>
</div>
</body>
</html>